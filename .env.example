PORT=5000

# Session security (required for production)
SESSION_SECRET=your-secure-session-secret-here-change-in-production
# Admin token for protected routes (min 32 alphanumeric chars)
ADMIN_TOKEN=PLEASECHANGEMEAAAAAAAAAAAAAAAAAAAAAAAAAA

# PostgreSQL connection (required in production)
# Local example:
# DATABASE_URL=postgres://valor_user:valorpass@localhost:5432/valor_vibe
# Alternatively:
# POSTGRES_URL=postgres://valor_user:valorpass@localhost:5432/valor_vibe

# CORS and AI mode (demo = no external AI calls)
CORS_ORIGIN=http://localhost:5173
AI_MODE=demo

# Sessions
# Use 'postgres' in production to persist sessions via connect-pg-simple
SESSION_STORAGE=postgres

# Resource manager thresholds (tune to reduce noisy alerts in dev)
RM_HEAP_ALERT_THRESHOLD=90
RM_MEMORY_THRESHOLD_MB=512

# Optional: enable live AI responses for the assistant
# OPENAI_API_KEY=sk-...
